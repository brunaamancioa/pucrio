import turtle

t = turtle.Turtle()
#eixos cartesianos
t.fd(400)
t.bk(800)
t.fd(400)
t.rt(-90)
t.fd(400)
t.bk(800)
t.fd(400)
t.rt(45)
t.up()
#quadrado
t.fd(100)
t.rt(45)
t.down()
for i in range(4):
  t.fd(40)
  t.rt(90)
t.up()
#triângulo
t.rt(90)
t.fd(120)
t.down()
for i in range(3):
  t.fd(50)
  t.lt(120)
t.up()
#círculo
t.rt(90)
t.fd(150)
t.down()
t.circle(25)
t.up()
#espiral
t.rt(90)
t.fd(150)
t.down()
for i in range(36):
  t.fd(i - 1)
  t.lt(45)
t.up()
#bandeira fácil - Japão
t.rt(90)
t.fd(140)
t.down()
t.fillcolor('Red')
t.begin_fill()
t.circle(25)
t.end_fill()
t.up()
t.fd(80)
t.rt(90)
t.fd(15)
t.down()
t.rt(90)
t.fd(160)
t.rt(90)
t.fd(80)
t.rt(90)
t.fd(160)
t.rt(90)
t.fd(80)
t.up()
t.rt(60)
t.up()
#Bandeira média - Itália
t.rt(120)
t.fd(180)
t.down()
t.fillcolor('Green')
t.begin_fill()
t.fd(80)
t.rt(-90)
t.fd(50)
t.rt(-90)
t.fd(80)
t.rt(-90)
t.fd(50)
t.rt(-90)
t.rt(-90)
t.end_fill()
t.fd(100)
t.rt(90)
t.fd(80)
t.rt(90)
t.fd(50)
t.rt(180)
t.fillcolor('Red')
t.begin_fill()
t.fd(100)
t.rt(-90)
t.fd(80)
t.rt(-90)
t.fd(50)
t.rt(-90)
t.fd(80)
t.end_fill()
t.up()
t.rt(-90)
t.fd(460)
#Bandeira difícil - Coreia do Norte
t.down()
t.fillcolor('Blue')
t.begin_fill()
t.fd(150)
t.rt(-90)
t.fd(15)
t.rt(-90)
t.fd(150)
t.rt(-90)
t.fd(15)
t.end_fill()
t.rt(180)
t.fd(25)
t.rt(90)
t.fd(150)
t.rt(90)
t.fd(25)
t.rt (180)
t.up ()
t.fd (25)
t.down ()
t.fillcolor('Red')
t.begin_fill()
t.rt (-90)
t.fd (150)
t.rt (90)
t.fd (50)
t.rt (90)
t.fd (150)
t.rt (90)
t.fd (50)
t.end_fill()
t.rt(180)
t.fd(50)
t.fd(10)
t.rt(-90)
t.fd (150)
t.rt (-90)
t.fd (15)
t.rt (180)
t.fillcolor('Blue')
t.begin_fill()
t.fd (28)
t.rt (90)
t.fd (150)
t.rt (90)
t.fd (14)
t.rt (90)
t.fd (150)
t.rt (90)
t.end_fill()
t.up ()
t.rt (90)
t.fd (20)
t.rt (90)
t.fd (33)
t.down ()
t.fillcolor('White')
t.begin_fill()
t.circle(20)
t.end_fill()
t.rt (-90)
t.up ()
t.fd (6)
t.down ()
t.fillcolor('Blue')
t.begin_fill()
for i in range(5): 
  t.fd(30)
  t.rt (144)
t.end_fill()
